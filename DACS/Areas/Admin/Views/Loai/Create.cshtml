@model LoaiDacSan
@{
	ViewData["Title"] = "Tạo Loại";
	Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<div class="container">
	<h3>THÊM LOẠI ĐẶC SẢN</h3>
	<form asp-action="Create" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="TenLoai">Tên thể loại:</label>
			<input asp-for="TenLoai" type="text" class="form-control" />
			<span asp-validation-for="TenLoai" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="AnhLoai">Ảnh loại:</label>
			<input id="imageInput" type="file" asp-for="AnhLoai" class="form-control" accept="image/jpeg,image/jpg,image/png" />
			<br />
			<img id="previewImage" style="width:250px;height:250px;display: none" alt="anh xem truoc" />
		</div>
		<div class="form-group">
			<label asp-for="MoTaLoai">Mô tả thể loại:</label>
			<input asp-for="MoTaLoai" type="text" class="form-control" />
			<span asp-validation-for="MoTaLoai" class="text-danger"></span>
		</div>


		<button type="submit" class="btn btn-primary">Tạo mới</button>

	</form>

	<div>
		<a asp-action="Index">Quay trở lại</a>
	</div>

</div>



<script>
	document.getElementById('imageInput').addEventListener('change', function (event) {
		var output = document.getElementById('previewImage');
		if (this.files && this.files[0]) {
			var reader = new FileReader();
			reader.onload = function (e) {
				output.src = e.target.result;
				output.style.display = 'block';
			};

			reader.readAsDataURL(this.files[0]);
		}

	});


</script>
