@model LoaiDacSan
@{
	ViewData["Title"] = "Sửa loại";
	Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<div class="container">
	<h3>CHỈNH SỬA LOẠI</h3>
	<form asp-action="Edit" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<input asp-for="MaLoai" type="hidden" value="@Model.MaLoai" />
		<div class="form-group">
			<label asp-for="TenLoai">Tên thể loại:</label>
			<input asp-for="TenLoai" type="text" class="form-control" />
			<span asp-validation-for="TenLoai" class="text-danger"></span>
		</div>
		<br />
		<div class="form-group">
			<img id="previewImage" src="@Model.AnhLoai" style="width:250px;height:250px" />
			<br />
			<label asp-for="AnhLoai">Tải lên ảnh loại:</label>
			<input id="imageInput" asp-for="AnhLoai" type="file" class="form-control" accept="image/jpeg,image/jpg,image/png" />
			<span asp-validation-for="AnhLoai" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="MoTaLoai">Mô tả loại:</label>
			<input asp-for="MoTaLoai" type="text" class="form-control" />
			<span asp-validation-for="MoTaLoai" class="text-danger"></span>
		</div>
		<br />

		<button type="submit" class="btn btn-primary">Lưu</button>
		<a asp-action="Index" class="btn btn-secondary">Huỷ</a>

	</form>

	<div>
		<a asp-action="Index">Quay trở lại</a>
	</div>

</div>


<script>
	document.getElementById('imageInput').addEventListener('change', function (event) {
		var output = document.getElementById('previewImage');
		if (this.files && this.files[0]) {
			var reader = new FileReader();
			reader.onload = function (e) {
				output.src = e.target.result;

			};

			reader.readAsDataURL(this.files[0]);
		}

	});


</script>




