@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<style>


    .dropbtn {
        width: 40px;
        height: 40px;
    }


        .dropbtn img {
            width: 40px;
            height: 40px;
        }

    .dropdown {
        display: inline-block;
    }

    .dropdown-content {
        border-radius: 20px;
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 300px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        padding:10px;
    }

        .dropdown-content a {
            border: 1px solid black;
            margin-top:2px;
            border-radius: 10px;
            color: black;
            padding: 5px;
            text-decoration: none;
            display: block;
            height: 40px;
        }

        .dropdown-content p {
            text-align:center;
        }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover a:hover{
        background-color: #3e8e41;
        color:white;
    }
    
    .dropdown:hover button:hover {
        background-color: #3e8e41;
        color: white;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }

    .navbar-nav a button{
        margin-left:35px;
    }
</style>




<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <div class="dropbtn">
        <img src="~/image/TaiKhoan.png" style="width:40px;height:40px"/>
            </div>

            <div class="dropdown-content" >
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="border:none;text-align:center">Xin chào @UserManager.GetUserName(User)!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0" style="width:300px;border-radius: 10px;">Đăng xuất</button>
        </form>
            </div>
        </div>
}
else
{
        <div class="dropdown">
            <div class="dropbtn">
                <img src="~/image/Login.png" />
            </div>
            
            <div class="dropdown-content">
                <a asp-area="Identity" asp-page="/Account/Register" >
                    <p>Đăng ký</p>
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" >
                    <p>Đăng nhập</p>
                </a>
                </div>
            
            </div>
       
        

}
</ul>



