<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="shortcut icon" href="~/image/anhtitle.jpg" />
    
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DACS.styles.css" asp-append-version="true" />



    <style>

        header {
            background-image: linear-gradient(to right,#228B22,#96c93d);
            width: 100%;
            border: red;
            height: auto;
        }

        .titleHeader{
            width:100%;
        }

        .img3 {
            width: 40px;
            border-radius: 50%;
            height: 40px;
        }

        .imgLOGO {
            position: absolute;
            width: 132px;
            height: 132px;
            left:10px;
        }

        button.BtnTim {
            position: relative;
            border: none;
            background: none;
            cursor: pointer;
            border-radius: 50%;
        }

        .container {
            padding-top: 5px;
        }

            .container img {
                cursor: pointer;
            }


        .hidden {
            display: none;
        }



         .imglogo, .title, nav div{
            display: inline-block;
        }

        .DangNhap {
            border: 1px solid black;
            color: black;
            border-radius: 5px;
            text-align: center;
        }

        .DangKy {
            border: 1px solid black;
            color: black;
            border-radius: 5px;
            text-align: center;
        }


        #Tim {
            background-image: linear-gradient(to right, #228B22,#96c93d );
            height: 60px;
            margin-top: 5px;
        }


        #Find {
            margin-left:30%;
            margin-top: 5px;
        }

        .grid-container {
            position: absolute;
            grid-template-columns: auto;
            background-color: white;
            border-radius: 8px;
            border: 1px solid black;
            margin-left: 90%;
            top: 60px;
        }

        .grid-item1 {
            text-align: center;
            font-size: 20px;
            padding: 5px;
        }

        .grid-item2 {
            padding: 5px;
            text-align: center;
            font-size: 20px;
        }

        .title {
            
            color:white;
            margin-left:40%;
        }
    </style>

    @* style footer *@

    <style>
        footer {
            width: auto;
            height: auto;
        }

        .row {
            display: flex;
        }

        .row li{
            list-style-type:none;
            padding:2px;
        }

        .row a{
            text-decoration:none;
        }

        .rounded-image {
            background: none;
            width: 30px;
            height: auto;
            mix-blend-mode: multiply;
        }

        .ThanhToan {
            background: none;
            width: 150px;
            height: auto;
            mix-blend-mode: multiply;
        }
    </style>

</head>


<body>
    <header>
        <div style="padding-bottom:10px">
            <nav>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="~/image/LOGO.png"
                         class="imgLOGO" />
                </a>
                <p class="title" style="font-size:35px;font-family:'Times New Roman';font-weight: bold; ">Đặc Sản Quê Hương</p>
                <div style="float:right;padding-right:60px;padding-top:10px">
                    <partial name="_LoginPartial" />
                </div>            
            </nav>
            <form asp-area="Customer" asp-controller="Home" asp-action="Index" style="margin-bottom:5px" id="Find" class="TimKiem">
            
            <div class="row">
                 
                <div class="col-8">
                        <div class="row">
                            <div class="col-9">
                                <input name="tk" style="height:40px;width:520px " type="text" placeholder="Tìm kiếm đặc sản, quê hương" />
                            </div>
                            <div class="col-1"></div>
                            <div class="col-2">
                                <button class="BtnTim" type="submit">
                                    <img class="img3" src="~/image/Tim.png" />
                                </button>
                            </div>
                        </div>                        
                </div>
              
                <div class="col-4" >
                        <div style="float:right;padding-right:60px">
                    @await Component.InvokeAsync("CartSummary")
                        </div>
                </div>
                
                                
            </div>
            </form>
        </div>

            


    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer>
        <div style="height:30px"></div>
        <div class="row">
            <div class="col-3">
                <h3 style="padding-left:20px">Trang cửa hàng </h3>
                <ul>
                    <li><img src="~/image/FaceBook.png" alt="FB" class="rounded-image">&nbsp;Facebook</li>

                    <li><img src="~/image/Instagram.png" alt="ig" class="rounded-image">&nbsp;Instagram</li>

                    <li><img src="~/image/YouTube.png" alt="YT" class="rounded-image">&nbsp;YouTube</li>
                </ul>
            </div>
            <div class="col-3">
                <h3 style="padding-left:20px">Dịch vụ</h3>
                <ul>
                    <li>Hỗ trợ khách hàng</li>
                    <li>Tích Điểm Vip</li>
                    <li>Mua phiếu mua hàng</li>
                    <li>Hướng Dẫn Cách Thanh Toán</li>
                    <li>Cảnh báo giả mạo</li>
                </ul>
            </div>
            <div class="col-3">
                <h3 style="padding-left:20px ">Thông tin</h3>
                <ul>
                    <li>Địa chỉ: Hutech Khu E, TP.HCM</li>
                    <li>Điện thoại: 09xxxxxxx</li>
                    <li>Email: TAIDZ@gmail.com</li>
                </ul>
            </div>
            <div class="col-3">
                <div>
                    <img src="~/image/ShipCOD.png" class="ThanhToan" />
                    <img src="~/image/VNpay.png" class="ThanhToan" />
                </div>

            </div>
        </div>

    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
